{
  "name": "payment-service",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env NODE_ENV=production nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cross-env TEMPORAL_LOG_LEVEL=ERROR jest --coverage",
    "test:watch": "cross-env NODE_ENV=development jest --watch",
    "test:cov": "cross-env TEMPORAL_LOG_LEVEL=ERROR jest --coverage",
    "test:debug": "cross-env NODE_ENV=development node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:unit": "cross-env TEMPORAL_LOG_LEVEL=ERROR jest",
    "test:e2e": "cross-env NODE_ENV=development jest --config ./test/jest-e2e.json",
    "test:all": "npm run test:unit && npm run test:e2e",
    "pretest:int": "cross-env NODE_ENV=development npx knex migrate:latest --env test --knexfile src/infrastructure/database/knexfile.ts",
    "migration:run": "cross-env NODE_ENV=development npx knex migrate:latest --knexfile src/infrastructure/database/knexfile.ts --env development",
    "migration:rollback": "cross-env NODE_ENV=development npx knex migrate:rollback --knexfile src/infrastructure/database/knexfile.ts --env development",
    "migration:make": "npx knex migrate:make --knexfile src/infrastructure/database/knexfile.ts -x ts",
    "migration:status": "npx knex migrate:list --knexfile src/infrastructure/database/knexfile.ts",
    "db:seed": "cross-env NODE_ENV=development knex seed:run --knexfile src/infrastructure/database/knexfile.ts --env development",
    "worker:temporal": "cross-env NODE_ENV=development ts-node src/infrastructure/temporal/worker.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.3",
    "@temporalio/activity": "^1.14.0",
    "@temporalio/client": "^1.14.0",
    "@temporalio/worker": "^1.14.0",
    "@temporalio/workflow": "^1.14.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cpf-cnpj-validator": "^1.0.3",
    "dotenv": "^17.2.3",
    "helmet": "^8.1.0",
    "knex": "^3.1.0",
    "mercadopago": "^2.11.0",
    "nest-knexjs": "^0.0.29",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@temporalio/testing": "^1.14.0",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.2.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "setupFilesAfterEnv": ["<rootDir>/jest-setup.ts"],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageProvider": "v8",
    "collectCoverageFrom": [
      "src/application/use-cases/**/*.ts",
      "src/domain/entities/**/*.ts",
      "src/infrastructure/gateways/**/*.ts",
      "!src/main.ts",
      "!src/**/*.module.ts",
      "!src/infrastructure/repositories/**/*.ts",
      "!src/presentation/controllers/**/*.ts",
      "!src/application/use-cases/**/index.ts"
    ],
    "coveragePathIgnorePatterns": [
      ".entity.ts",
      ".interface.ts",
      "node_modules"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    }
  }
}
